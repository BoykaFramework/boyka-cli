{
  "name": "boyka-cli",
  "version": "0.1.0",
  "description": "Command line tool for Boyka framework",
  "main": "./dist/index.js",
  "bin": {
    "boyka": "./dist/index.js"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --check src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "dev": "tsc -w",
    "postinstall": "tsc && husky install"
  },
  "keywords": [],
  "author": "Wasiq Bhamla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BoykaFramework/boyka-cli/issues"
  },
  "funding": {
    "type": "GitHub Sponsor",
    "url": "https://github.com/sponsors/BoykaFramework"
  },
  "repository": {
    "url": "https://github.com/BoykaFramework/boyka-cli"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.4.1",
    "@stylistic/eslint-plugin-ts": "^1.4.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm lint:fix",
      "pnpm lint",
      "pnpm format:fix",
      "pnpm format"
    ]
  }
}
